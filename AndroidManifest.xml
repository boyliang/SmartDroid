<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ranlior.smartdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />
    
    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
                
        <!-- Activities -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RuleActivity"
            android:label="@string/title_activity_rule"
            android:theme="@style/Theme.Sherlock" >
        </activity>
        <activity
            android:name=".activities.RuleEditorActivity"
            android:label="Rule Editor"
            android:theme="@style/Theme.Sherlock" >
            <intent-filter>
                <action android:name="com.ranlior.smartdroid.ACTION_NEW_RULE" />
                <category android:name="com.ranlior.smartdroid.ACTION_EDIT_RULE" />
            </intent-filter>
        </activity>
        
		<!-- Services -->
        <service android:name=".services.SysEventHandleIntentService"/>
        
        <!-- BroadcastReceivers -->
        <receiver android:name=".broadcastreceivers.SysEventReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_BATTERY_LOW"/>
  				<action android:name="android.intent.action.ACTION_BATTERY_OKAY"/>
                <action android:name="android.intent.action.POWER_CONNECTED" />
                <action android:name="android.intent.action.POWER_DISCONNECTED" />
                <action android:name="android.media.RINGER_MODE_CHANGED" />
                <!-- FIXME: not invoked -->
                <action android:name="android.intent.action.HEADSET_PLUG"/>
                
                <action android:name="com.ranlior.smartdroid.ACTION_LOCATION_PROXIMITY" />
            </intent-filter>
        </receiver>
		
		<!-- ContentProviders -->
		
    </application>

</manifest>